<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- Package Properties -->
  <PropertyGroup>
    <PackageId>MTGOSDK</PackageId>
    <Version>1.0.0</Version>
    <Authors>Cory Bennett</Authors>
    <Company>Videre Project</Company>
  </PropertyGroup>

  <!-- Publishing Configuration -->
  <PropertyGroup Condition="'$(TargetFramework)' != '$(MTGOSDKCoreTFM)'">
    <PublishSingleFile>true</PublishSingleFile>
    <PublishTrimmed>true</PublishTrimmed>
    <SelfContained>false</SelfContained>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <!-- Internal: MTGOSDK.Core Project Properties -->
  <Import Project="lib\MTGOSDK.Core.props"
          Condition="'$(TargetFramework)' == '$(MTGOSDKCoreTFM)'" />
  <Import Project="lib\MTGOSDK.Core.targets" />

</Project>