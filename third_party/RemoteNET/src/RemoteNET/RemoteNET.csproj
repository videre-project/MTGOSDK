<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>Latest</LangVersion>
		<RunPostBuildEvent>Always</RunPostBuildEvent>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
		<ProjectReference Include="..\..\..\..\MTGOSDK.Win32\MTGOSDK.Win32.csproj" />
		<ProjectReference Include="..\ScubaDiver.API\ScubaDiver.API.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Properties\Resources.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>Resources.resx</DependentUpon>
		</Compile>
		<EmbeddedResource Update="Properties\Resources.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>Resources.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

  <!-- Configures build-time dependencies for MSBuild -->
  <PropertyGroup>
    <NoWarn>$(NoWarn);NU1702</NoWarn>
  </PropertyGroup>
  <ItemGroup Label=".NET Dependencies">
    <ProjectReference Include="..\ScubaDiver\ScubaDiver.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup Label="Win32 Dependencies">
    <ProjectReference Include="..\..\..\SharpNeedle\src\Bootstrapper\Bootstrapper.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\..\..\SharpNeedle\src\Launcher\Launcher.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup Label="x64 Dependencies">
    <ProjectReference Include="..\..\..\SharpNeedle\src\Bootstrapper\Bootstrapper_x64.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
    <ProjectReference Include="..\..\..\SharpNeedle\src\Launcher\Launcher_x64.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <Private>False</Private>
    </ProjectReference>
  </ItemGroup>

  <Target Name="PreBuild"
          BeforeTargets="CoreCompile"
          AfterTargets="ResolveProjectReferences">
    <ItemGroup>
      <OutputFiles Include="$(SolutionDir)\dist\$(Configuration)\Win32\*.exe" />
      <OutputFiles Include="$(SolutionDir)\dist\$(Configuration)\Win32\*.dll" />
      <OutputFiles Include="$(SolutionDir)\dist\$(Configuration)\x64\*.exe" />
      <OutputFiles Include="$(SolutionDir)\dist\$(Configuration)\x64\*.dll" />
      <OutputFiles Include="$(SolutionDir)\dist\$(Configuration)\*.dll" />
    </ItemGroup>

    <Copy SourceFiles="@(OutputFiles)"
          DestinationFolder="$(ProjectDir)\Resources" />
	</Target>

	<Target Name="PostBuild"
          AfterTargets="AfterBuild">
		<Exec Command="powershell &quot;Clear-Content -Path '$(ProjectDir)\Resources\*' -Force&quot;" />
	</Target>

</Project>